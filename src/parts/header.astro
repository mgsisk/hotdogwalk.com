---
import Logo from "@parts/logo.svg";

interface Props {
  frontmatter?: {[index: string]: any},
  hero?: boolean,
}

const {hero = false} = Astro.props.frontmatter ? Astro.props.frontmatter : Astro.props
const headerClass = hero ? 'vw-100 hero' : 'vw-100';
---

<header class={headerClass}>
  {hero ? <a href="/sponsors">Become a Sponsor</a> : null}
  <a href="/" class="logo"><Logo/></a>
  <video src="/srv/hero.mp4" poster="/srv/hero.jpg" autoplay loop muted playsinline></video>
  {hero ? <div class="cta"></div><a href="#main">Learn More</a> : null}
</header>
